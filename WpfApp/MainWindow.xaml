<Window x:Class="MVVM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MVVM"
        mc:Ignorable="d"
        Title="grid_pcap" Height="600" Width="580">
    <Window.Resources>
        
        <Style TargetType="Grid">
            <Setter Property="Background" Value="Transparent"/>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="14" />
        </Style>
        <Style TargetType="{x:Type GridViewColumnHeader}">
            <Setter Property="HorizontalContentAlignment" Value="Left" />
        </Style>

    </Window.Resources>

    <Grid  Background="Lavender" ShowGridLines="True"  Margin="0,0,0,0">
        <Border Grid.Column="0" BorderBrush="White" BorderThickness="2">
        </Border>
        <ListView Margin="10"  ItemsSource="{Binding Data}" SelectedItem="{Binding SelectedData}">
            <ListView.View >
                <GridView >
                    <GridViewColumn Header="id" Width="40"  DisplayMemberBinding="{Binding Id}" />
                    <GridViewColumn Header="source ip" Width="120" DisplayMemberBinding="{Binding Source_ip}" />
                    <GridViewColumn Header="destination ip" Width="120" DisplayMemberBinding="{Binding Dest_ip}" />
                    <GridViewColumn Header="mac source" Width="120" DisplayMemberBinding="{Binding Mac_source}" />
                    <GridViewColumn Header="mac destination" Width="120" DisplayMemberBinding="{Binding Mac_destin}" />
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
