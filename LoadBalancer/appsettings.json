{
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Kestrel": {
    "Certificates": {
      "Development": {
        "CertsPath": "./ssl/server.pfx",
        "Password": "11111"
      }
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "api-route": {
        "ClusterId": "api-cluster",
        "Match": {
          "Path": "{**catch-all}"
        },
        "Transforms": [ { "PathPattern": "{**catch-all}" } ]
      }
    },
    "Clusters": {
      "api-cluster": {
        "LoadBalancingPolicy": "FirstAlphabetical",
        "Destinations": {
          "destination1": {
            "Address": "http://loadbalancing.api:5000"
          },
          "destination2": {
            "Address": "http://loadbalancing.api2:6000"
          },
          "destination3": {
            "Address": "http://loadbalancing.api3:7000"
          },
          "destination4": {
            "Address": "http://loadbalancing.api4:8000"
          },
          "destination5": {
            "Address": "http://loadbalancing.api5:9000"
          }
        }
      }
    }
  }
}
