{
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.AspNetCore": "Warning",
      "Yarp.ReverseProxy": "Debug"
    }
  },  
    "Kestrel": {
      "Endpoints": {
        "HttpsInlineCertFile": {
          "Url": "https://*:",
          "Protocols": "Http2",
          "Certificate": {
            "Path": "/https/server.pfx",
            "Password": "11111"
          }
        }
      }
    },  
  //"Kestrel": {
  //  "Certificates": {
  //    "Development": {
  //      "CertsPath": "./https/server.pfx",
  //      "Password": "11111"
  //    }
  //  }
  //},
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "api-route": {
        "ClusterId": "api-cluster",
        "Match": {
          "Path": "{**catch-all}"
        },
        "Transforms": [ { "PathPattern": "{**catch-all}" } ]
      }
    },
    "Clusters": {
      "api-cluster": {
        "HttpRequest": {
          "Version": "2",
          "VersionPolicy": "RequestVersionExact"
        },
        "LoadBalancingPolicy": "FirstAlphabetical",
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5010"
          },
          "destination2": {
            "Address": "http://localhost:5011"
          },
          "destination3": {
            "Address": "http://loadbalancing.api3:5012"
          },
          "destination4": {
            "Address": "http://loadbalancing.api4:5013"
          },
          "destination5": {
            "Address": "http://loadbalancing.api5:5014"
          }
        }
      }
    }
  }
}
