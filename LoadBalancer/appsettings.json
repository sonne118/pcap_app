{
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "api-route": {
        "ClusterId": "api-cluster",
        "Match": {
          "Path": "{**catch-all}"
        },
        "Transforms": [ { "PathPattern": "{**catch-all}" } ]
      }
    },    
      "Kestrel": {
        "Endpoints": {
          "HttpsInlineCertFile": {
            "Url": "https://localhost:5001",
            "Protocols": "Http2",
            "Certificate": {
              "Path": "ssl\\server.pfx",
              "Password": "11111"
            }
          }
        }
      }
    },
    "Clusters": {
      "api-cluster": {
        "LoadBalancingPolicy": "FirstAlphabetical",
        "Destinations": {
          "destination1": {
            "Address": "http://loadbalancing.api:8080"
          },
          "destination2": {
            "Address": "http://loadbalancing.api2:8080"
          },
          "destination3": {
            "Address": "http://loadbalancing.api3:8080"
          },
          "destination4": {
            "Address": "http://loadbalancing.api4:8080"
          },
          "destination5": {
            "Address": "http://loadbalancing.api5:8080"
          }
        }
      }
    }
  }
}
